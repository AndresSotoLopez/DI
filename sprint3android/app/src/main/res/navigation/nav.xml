<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/nav_catalog_activity">

    <fragment
        android:id="@+id/nav_catalog_activity"
        android:name="com.example.my_catalog.CatalogFragment"
        android:label="@string/CatalogFragment"
        tools:layout="@layout/fragment_catalog">
        <argument
            android:defaultValue="@string/CatalogFragment"
            app:argType="reference" />
    </fragment>

    <fragment
        android:id="@+id/nav_about_activity"
        android:name="com.example.my_catalog.AboutFragment"
        android:label="@string/AboutFragment"
        tools:layout="@layout/fragment_about">
        <argument
            android:defaultValue="@string/AboutFragment"
            app:argType="reference" />
    </fragment>

</navigation>